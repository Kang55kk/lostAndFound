{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home",
			"style": {
				"navigationBarTitleText": "广应科失物招领",
				"app-plus": {
					"pullToRefresh": {
						"support": false,
						"height": "30%",
						"color": "#F6F6F6",
						"style": "default",
						"contentdown": {
							"caption": "下拉可刷新自定义文本"
						},
						"contentover": {
							"caption": "释放可刷新自定义文本"
						},
						"contentrefresh": {
							"caption": "正在刷新"
						}
					}

				}
			}
		}, {
			"path": "pages/classify",
			"style": {
				"navigationBarTitleText": "分类"
			}
		}, {
			"path": "pages/publish",
			"style": {
				"navigationBarTitleText": "发布启示"
			}
		}, {
			"path": "pages/favorites",
			"style": {
				"navigationBarTitleText": "我的收藏"
			}
		}, {
			"path": "pages/mine",
			"style": {
				"navigationBarTitleText": ""
			}
		}, {
			"path": "pages/itemDetails/itemDetails",
			"style": {
				"navigationBarTitleText": "物品详情",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/myPublish",
			"style": {
				"navigationBarTitleText": "我的发布",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/myInfo",
			"style": {
				"navigationBarTitleText": "我的信息",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/register",
			"style": {
				"navigationBarTitleText": "帐号注册",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
			}

		}



	    ,{
            "path" : "pages/search/searchResult",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "搜索结果",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"backgroundColor": "#F6F6F6",
		"backgroundTextStyle": "light",
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "失物招领",
		"navigationBarBackgroundColor": "#4dade0",
		"app-plus": {
			"bounce": "none"
		}
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#707070",
		"selectedColor": "#4dade0",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/home",
				"iconPath": "static/tabBar/home.png",
